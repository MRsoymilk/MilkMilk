@page
@model MilkMilk.Pages.PageBlog.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Blog.id" />
            <input type="hidden" asp-for="Blog.release_date" />
            <div class="row">
                <div class="form-group col-md-4">
                    <label asp-for="Blog.title" class="control-label"></label>
                    <input asp-for="Blog.title" class="form-control" />
                    <span asp-validation-for="Blog.title" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="Blog.category" class="control-label"></label>
                    <input asp-for="Blog.category" class="form-control" />
                    <span asp-validation-for="Blog.category" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="Blog.tag" class="control-label"></label>
                    <input asp-for="Blog.tag" class="form-control" />
                    <span asp-validation-for="Blog.tag" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Blog.content" class="control-label"></label>
                <div id="editmd">
                    <textarea asp-for="Blog.content" class="form-control"></textarea>
                </div>
                <span asp-validation-for="Blog.content" class="text-danger"></span>

                <script src="~/lib/markdown/js/jquery.min.js"></script>
                <script src="~/lib/markdown/js/editormd.min.js"></script>
                <script type="text/javascript">
                    var editor;
                    $(function () {
                        editor = editormd("editmd", {
                            width: "90%",
                            height: 640,
                            syncScrolling: "single",
                            codeFold: true,
                            htmlDecode: true,
                            tex: true,
                            taskList: true,
                            emoji: true,
                            flowChart: true,
                            sequenceDiagram: true,
                            path: "/lib/markdown/lib/"
                        })
                    })
                </script>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
